@model RawTorpedo.Models.Game

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Game</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="BGGID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BGGID" class="form-control" />
                <span asp-validation-for="BGGID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BGGUrl" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BGGUrl" class="form-control" />
                <span asp-validation-for="BGGUrl" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GameName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="GameName" class="form-control" />
                <span asp-validation-for="GameName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaxNumberOfPlayers" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MaxNumberOfPlayers" class="form-control" />
                <span asp-validation-for="MaxNumberOfPlayers" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MinNumberOfPlayers" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MinNumberOfPlayers" class="form-control" />
                <span asp-validation-for="MinNumberOfPlayers" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Playtime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Playtime" class="form-control"></select>
                <span asp-validation-for="Playtime" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PublishedDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PublishedDate" class="form-control" />
                <span asp-validation-for="PublishedDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SweetNumberOfPlayers" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SweetNumberOfPlayers" class="form-control" />
                <span asp-validation-for="SweetNumberOfPlayers" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
